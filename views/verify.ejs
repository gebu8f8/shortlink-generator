<%- include('partials/header', { title: '需要驗證' }) %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">需要驗證</h5>
                </div>
                <div class="card-body">
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <p>此短網址需要密碼才能訪問。</p>
                    <% if (url.expiry_date) { %>
                        <p class="text-muted small">有效期限至：<%= new Date(url.expiry_date).toLocaleString('zh-TW') %></p>
                    <% } %>

                    <form method="post">
                        <div class="mb-3">
                            <label for="passcode" class="form-label">請輸入密碼</label>
                            <input type="password" class="form-control" id="passcode" name="passcode" required autofocus>
                        </div>
                        <% if (captchaEnabled) { %>
                        <div class="mb-3">
                            <label for="captcha" class="form-label">請輸入圖片中的驗證碼</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="captcha" name="captcha" required>
                                <div class="input-group-text" id="captcha-image-container" style="padding: 0; cursor: pointer;" title="點擊刷新">
                                    <%- captchaImage %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <button type="submit" class="btn btn-primary">提交</button>
                        <a href="/" class="btn btn-link">返回首頁</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const container = document.getElementById('captcha-image-container');
    if (container) {
        container.addEventListener('click', () => {
            fetch('/captcha')
                .then(res => res.text())
                .then(svg => {
                    container.innerHTML = svg;
                });
        });
    }
</script>

<%- include('partials/footer') %>
